@page "/AddUser"
<h2>Add User</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="firstname" class="control-label">First name</label>
                <input form="firstname" type="text" class="form-control" @bind="@obj.FirstName" />
            </div>
            <div class="form-group">
                <label for="lastname" class="control-label">Last name</label>
                <input form="lastname" type="text" class="form-control" @bind="@obj.LastName" />
            </div>
            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input form="email"type="email" class="form-control" placeholder="Email@email" @bind="@obj.Email" />
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateUser" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>



